<% content_for :page_title, "Index" %>
<br> 
    <div class="container">
        <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
            <div class="panel panel-success">
                <div class="panel-body">
                    <strong class="mcolor"><%= post.title %></strong>
                    <%#><strong class="mcolor"><%= link_to post.title, post %>
                </div>
                <div class="panel-body"><%=h truncate(post.body, :length => 80) %></div>
            </div>
            <% end %>
        <% end %>
    </div>